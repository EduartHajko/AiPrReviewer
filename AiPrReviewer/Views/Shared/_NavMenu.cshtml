@{
    var owner = ViewBag.Owner as string ?? "EduartHajko";
    var repo = ViewBag.Repo as string ?? "InnovationPlatform";
}

<nav class="mb-4">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link @(ViewData["ActiveTab"] as string == "Repositories" ? "active" : "")"
               asp-controller="Repository" asp-action="Index">
                📂 Repositories
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewData["ActiveTab"] as string == "PRs" ? "active" : "")"
               asp-controller="PR" asp-action="Index"
               asp-route-owner="@owner" asp-route-repo="@repo">
                🔀 Pull Requests
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewData["ActiveTab"] as string == "Audit" ? "active" : "")"
               asp-controller="PR" asp-action="AuditLog">
                📝 Audit Log
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewData["ActiveTab"] as string == "Authors" ? "active" : "")"
               asp-controller="Author" asp-action="Index">
                👤 Author Evaluation
            </a>
        </li>
    </ul>
</nav>
