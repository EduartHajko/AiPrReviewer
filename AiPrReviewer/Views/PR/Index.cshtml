@model IReadOnlyList<Octokit.PullRequest>
@{
    var owner = ViewBag.Owner as string;
    var repo = ViewBag.Repo as string;
}

<h2>Pull Requests for @owner/@repo</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pr in Model)
        {
            <tr>
                <td>@pr.Number</td>
                <td>@pr.Title</td>
                <td>@pr.User.Login</td>
                <td>@pr.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-controller="PR"
                       asp-action="Details"
                       asp-route-owner="@owner"
                       asp-route-repo="@repo"
                       asp-route-id="@pr.Number"
                       class="btn btn-sm btn-primary">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
