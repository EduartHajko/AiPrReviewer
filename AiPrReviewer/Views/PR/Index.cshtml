@model IReadOnlyList<Octokit.PullRequest>

<h2>Pull Requests</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pr in Model)
        {
            <tr>
                <td>@pr.Number</td>
                <td>@pr.Title</td>
                <td>@pr.User.Login</td>
                <td>@pr.State.StringValue</td>
                <td>@pr.CreatedAt.ToLocalTime()</td>
                <td>
                    <a asp-controller="PR" asp-action="Details" asp-route-id="@pr.Number"
                       class="btn btn-sm btn-primary">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
