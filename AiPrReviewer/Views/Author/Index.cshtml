@await Html.PartialAsync("_NavMenu")
@{
    ViewData["Title"] = "Author Performance";
    var authors = ViewBag.Authors as List<string>;
}

<div class="container mt-4">
    <h2>🔍 Author Performance Evaluation</h2>
    <form asp-action="Evaluate" method="post" class="mt-3">
        <div class="form-group">
            <label for="author">Select Author</label>
            <select id="author" name="author" class="form-control" required>
                <option value="">-- Select an Author --</option>
                @foreach (var a in authors)
                {
                    <option value="@a">@a</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Analyze</button>
    </form>
</div>
